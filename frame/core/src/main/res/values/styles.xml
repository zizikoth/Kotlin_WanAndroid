<resources xmlns:tools="http://schemas.android.com/tools">

    <!--  项目主题	-->
    <style name="iTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/color_666666</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
    </style>

    <!--  页面跳转动画	-->
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_fade_hide</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_fade_show</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp0_5</item>
        <item name="android:background">@color/color_F5F5F5</item>
    </style>

    <style name="FadeDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_show</item>
        <item name="android:windowExitAnimation">@anim/fade_hide</item>
    </style>

    <style name="BottomSlideDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

</resources>
